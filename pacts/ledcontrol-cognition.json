{
  "consumer": {
    "name": "ledcontrol"
  },
  "provider": {
    "name": "cognition"
  },
  "messages": [
    {
      "description": "the team\u0027s new score",
      "metaData": {
        "contentType": "application/json; charset\u003dUTF-8"
      },
      "contents": {
        "payload": "2",
        "topic": "team/score/1"
      },
      "providerStates": [
        {
          "name": "a goal was shot"
        }
      ],
      "matchingRules": {
        "body": {
          "$.topic": {
            "matchers": [
              {
                "match": "regex",
                "regex": "team\\/score\\/\\d+"
              }
            ],
            "combine": "AND"
          },
          "$.payload": {
            "matchers": [
              {
                "match": "regex",
                "regex": "\\d+"
              }
            ],
            "combine": "AND"
          }
        }
      }
    },
    {
      "description": "the foul message",
      "metaData": {
        "contentType": "application/json; charset\u003dUTF-8"
      },
      "contents": {
        "payload": "",
        "topic": "game/foul"
      },
      "providerStates": [
        {
          "name": "a team fouled"
        }
      ],
      "matchingRules": {
        "body": {
          "$.topic": {
            "matchers": [
              {
                "match": "type"
              }
            ],
            "combine": "AND"
          },
          "$.payload": {
            "matchers": [
              {
                "match": "regex",
                "regex": ".*"
              }
            ],
            "combine": "AND"
          }
        }
      }
    },
    {
      "description": "the idle message",
      "metaData": {
        "contentType": "application/json; charset\u003dUTF-8"
      },
      "contents": {
        "payload": "true",
        "topic": "game/idle"
      },
      "providerStates": [
        {
          "name": "the table is idle"
        }
      ],
      "matchingRules": {
        "body": {
          "$.topic": {
            "matchers": [
              {
                "match": "type"
              }
            ],
            "combine": "AND"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.0"
    }
  }
}